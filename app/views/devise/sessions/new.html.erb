<h1>Bem-Vindo</h1>
<p class="mb-4">Entre com seu login e senha, para ter acesso ao sistema.</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group first mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: 'form-control' %>
  </div>

  <div class="form-group last mb-4">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Senha', class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mb-4">
    <%= f.submit "Entrar", class: "btn btn-block btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to "Rastrear Entrega", search_path, class: "btn btn-block btn-primary btn-lg text-white" %>
