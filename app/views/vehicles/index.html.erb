<div class="container-fluid">
  <div class="row">
    <div class="col-xs-'12 col-md-8">
      <h3>Veículos</h3>
    </div>
    <div class="col-xs-12 col-md-8">
      <%= form_with url: vehicles_path, class: "d-flex", method: :get do %>
        <div class="col-xs-12 col-md-6 px-0">
          <%= text_field_tag :q, nil, class: 'form-control d-inline mb-3', placeholder: 'Digite a placa ou parte dela ...' %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= submit_tag 'Pesquisar', class: "btn btn-default" %>
          <%= link_to 'Ver Todos', vehicles_path, class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-4 text-right">
      <%= link_to 'Cadastrar Novo', new_vehicle_path, class: 'btn btn-default' %>
    </div>
  </div>

  <% if @vehicles.any? %>

  <table class="table table-hover mt-4">
    <thead>
      <tr>
        <th scope="col">Placa</th>
        <th scope="col">Categoria</th>
        <th scope="col">Marca</th>
        <th scope="col">Modelo</th>
        <th scope="col">Ano</th>
        <th scope="col">Carga Máxima</th>
        <th scope="col">Ativo?</th>
      </tr>
    </thead>
    <tbody>
    <% @vehicles.each do | v | %>
      <tr>
        <td><%= link_to v.plate, v %></td>
        <td><%= v.category.name %></td>
        <td><%= v.brand %></td>
        <td><%= v.model %></td>
        <td><%= v.year %></td>
        <td><%= v.max_weight %></td>
        <td>
          <% if v.status == 'enable' %>
            <span>&#9745;</span>
          <% elsif v.status == 'in_delivery' %>
            <span>&#10148;</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <% else %>
    <hr />
    <h3>Nenhum veículo cadastrado</h3>
  <% end %>

</div>