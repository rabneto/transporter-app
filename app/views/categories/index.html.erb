<div class="container-fluid">
  <div class="row">
    <div class="col-xs-'12 col-md-8">
      <h3>Categorias</h3>
    </div>
    <div class="col-xs-'12 col-md-4 text-right">
      <%= link_to 'Cadastrar Nova', new_category_path, class: 'btn btn-default' %>
    </div>
  </div>

  <% if @categories.any? %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Ativa?</th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do | c | %>
      <tr>
        <td><%= link_to c.name, edit_category_path(c) %></td>
        <td>
          <% if c.status == 'enable' %>  
            <span>&#9745;</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <% else %>
    <hr />
    <h3>Nenhuma categoria cadastrada</h3>
  <% end %>

</div>